{
    "categories": [
        {
            "title": "#### 🚀 Features",
            "labels": [
                "type: feature request",
                "type: enhancement",
                "type: epic",
                "feat"
            ]
        },
        {
            "title": "#### 🐛 Bug Fixes",
            "labels": [
                "type: bug",
                "fix",
                "perf",
                "revert"
            ]
        },
        {
            "title": "#### 🧪 Maintenance",
            "labels": [
                "dependencies",
                "type: chore",
                "type: ci",
                "type: dependencies",
                "documentation",
                "Bump",
                "bump",
                "docs",
                "style",
                "test"
            ]
        }
    ],
    "ignore_labels": [
        "duplicate",
        "question",
        "invalid",
        "wontfix"
    ],
    "template": "#{{CHANGELOG}}\n#### 📦 Changes\n${{UNCATEGORIZED}}",
    "pr_template": "- #{{TITLE}}"
}
