{
    "categories": [
        {
            "title": "#### 🚀 Features",
            "labels": [
                "type: feature request",
                "type: enhancement",
                "type: epic",
                "feat:"
            ]
        },
        {
            "title": "#### 🐛 Bug Fixes",
            "labels": [
                "type: bug",
                "fix:"
            ]
        },
        {
            "title": "#### 🧪 Maintenance",
            "labels": [
                "dependencies",
                "type: chore",
                "type: ci",
                "type: dependencies",
                "documentation",
                "bump"
            ]
        }
    ],
    "ignore_labels": [
        "duplicate",
        "question",
        "invalid",
        "wontfix",
        "BUMP version"
    ],
    "template": "#{{CHANGELOG}}\n#### 📦 Changes\n${{UNCATEGORIZED}}",
    "pr_template": "- #{{TITLE}}",
    "base_branches": [
        "dev"
    ],
    "label_extractor": [
        {
            "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
            "target": "$1"
        }
    ]
}